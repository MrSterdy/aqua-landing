---
import { LuFileText, LuHammer, LuUser, LuX } from 'react-icons/lu'

const projects = [
  {
    image: '/images/stroitelstvo-na-vode.webp',
    title: 'Посёлок солнечный',
    type: 'Тип сооружения',
    document: 'Документ',
  },
  {
    image: '/images/stroitelstvo-na-vode.webp',
    title: 'Посёлок солнечный',
    type: 'Тип сооружения',
    document: 'Документ',
  },
  {
    image: '/images/stroitelstvo-na-vode.webp',
    title: 'Посёлок солнечный',
    type: 'Тип сооружения',
    document: 'Документ',
  },
]

const reviews = [
  {
    image: '/images/img.png',
    title: 'Посёлок солнечный',
    name: 'Петров Егор Александрович',
    document: 'Документ',
  },
  {
    image: '/images/img.png',
    title: 'Посёлок солнечный',
    name: 'Петров Егор Александрович',
    document: 'Документ',
  },
  {
    image: '/images/img.png',
    title: 'Посёлок солнечный',
    name: 'Петров Егор Александрович',
    document: 'Документ',
  },
]
---

<section class="px-6 border-border border-b-1 border-dashed grid-bg">
  <div class="max-w-[1400px] mx-auto flex flex-col gap-12 py-12">
    <div class="flex flex-col lg:flex-row gap-4 justify-between flex-wrap items-center">
      <div class="flex relative gap-4">
        <LuX className="top-5 sm:top-6 size-5 sm:size-6 relative text-primary opacity-75" />
        <h3 class="gap-4 relative text-2xl sm:text-3xl uppercase tracking-widest text-center lg:text-left">
          Наши проекты
        </h3>
        <LuX className="size-3 sm:size-4 text-primary opacity-75" />
      </div>
      <span class="relative top-2 text-base sm:text-lg text-muted-foreground text-balance text-center lg:text-left">Лишь малая часть выполненных нами проектов!</span>
    </div>

    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 xl:gap-12">
      {projects.map(project => (
        <li class="rounded-lg border-[1px] sm:border-2 border-primary/50 flex flex-col gap-3 bg-primary/10 p-6 pb-5">
          <img src={project.image} class="rounded-md" />
          <div class="flex flex-col gap-2">
            <h4 class="text-2xl">{project.title}</h4>
            <span class="inline-flex text-sm items-center gap-2 text-muted-foreground">
              <LuHammer className="size-5" />
              <span>{project.type}</span>
            </span>
            <span class="inline-flex text-sm items-center gap-2 text-muted-foreground">
              <LuFileText className="size-5" />
              <span>{project.document}</span>
            </span>
          </div>
        </li>
      ))}
    </ul>

    <div class="flex flex-col-reverse lg:flex-row gap-4 justify-between border-primary/50 flex-wrap items-center">
      <span class="relative text-base sm:text-lg text-muted-foreground text-balance text-center lg:text-left">Ваш отзыв - лучшая благодарность!</span>
      <div class="flex relative gap-4">
        <LuX className="top-5 sm:top-6 size-5 sm:size-6 relative text-primary opacity-75" />
        <h3 class="gap-4 relative text-2xl sm:text-3xl uppercase tracking-widest text-center lg:text-left">
          Отзывы
        </h3>
        <LuX className="size-3 sm:size-4 text-primary opacity-75" />
      </div>
    </div>

    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 xl:gap-12">
      {reviews.map(review => (
        <li class="rounded-lg border-[1px] sm:border-2 border-primary/50 flex flex-col gap-3 bg-primary/10 p-6 pb-5">
          <img src={review.image} class="rounded-md" />
          <div class="flex flex-col gap-2">
            <h4 class="text-2xl">{review.title}</h4>
            <span class="inline-flex text-sm items-center gap-2 text-muted-foreground">
              <LuUser className="size-5" />
              <span>{review.name}</span>
            </span>
            <span class="inline-flex text-sm items-center gap-2 text-muted-foreground">
              <LuFileText className="size-5" />
              <span>{review.document}</span>
            </span>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>
