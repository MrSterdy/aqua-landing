---
const workStages = [
  {
    number: '0',
    title: 'Этап 0',
    description: 'Бесплатная консультация, определение цели использования водного объекта, разработка дорожной карты',
  },
  {
    number: '1',
    title: 'Этап 1',
    description: 'Сбор информации по водному объекту, возможность оформления.',
  },
  {
    number: '2',
    title: 'Этап 2',
    description: 'Согласование параметров акватории и размещения объектов на ней.',
  },
  {
    number: '3',
    title: 'Этап 3',
    description: 'Подготовка комплекта документов и отправка в уполномоченный орган.',
  },
  {
    number: '4',
    title: 'Этап 4',
    description: 'Сопровождение документов до регистрации в ГВР.',
  },
]
---

<section class="px-6 border-border border-b-1 border-dashed">
  <div class="max-w-[1400px] mx-auto flex items-center flex-col gap-18 lg:gap-24 py-12">
    <h2 class="text-center gap-4 relative after:h-0.5 after:w-full after:-bottom-4 after:opacity-15 after:bg-linear-to-r after:from-transparent after:via-primary after:block after:absolute before:h-0.5 before:w-full before:-bottom-2 before:bg-linear-to-r before:from-transparent before:via-primary before:block before:absolute text-3xl sm:text-4xl uppercase tracking-widest">
      Как мы работаем
    </h2>

    <div class="flex flex-col lg:flex-row gap-4 w-full items-start">
      {workStages.map((stage, index) => (
        <div class="flex flex-col gap-4 w-full items-center justify-center relative">
          <span class="border-2 border-primary/50 border-dashed text-4xl text-center rounded-full px-8 py-6 w-23 relative before:absolute before:rounded-full before:m-auto before:border-1 before:border-border before:inset-0 before:size-[80%] text-primary">{stage.number}</span>
          <div class="flex flex-col items-center justify-center">
            <h3 class="text-2xl font-bold">{stage.title}</h3>
            <p class="text-muted-foreground text-center text-balance">{stage.description}</p>
          </div>
          {index < workStages.length - 1 && (
            <div class="border-[1px] border-primary/50 border-dashed absolute w-[2px] h-[calc(100%-4.75rem)] lg:h-[2px] top-23 lg:top-12 lg:left-[calc(50%+2.75rem)] lg:w-[calc(100%-4.5rem)] -z-10"></div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
