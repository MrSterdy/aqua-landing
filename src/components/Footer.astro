---
import { contacts } from '@/lib/contacts'
import { FaVk, FaWhatsapp } from 'react-icons/fa'
import { LiaTelegram } from 'react-icons/lia'
import { LuMapPin } from 'react-icons/lu'
import Logo from './Logo.astro';
---

<footer class="w-full px-6 pb-6 border-t-2 pt-6 bg-radial-[at_50%_100%] to-75% from-primary/20">
  <div class="w-full flex flex-col gap-4 max-w-[1400px] mx-auto">
    <div class="flex gap-4 justify-between items-center flex-wrap">
      <Logo />
      <div class="flex items-center gap-6 text-sm sm:text-base flex-wrap">
        <a href="#about-us" class="transition-colors hover:text-primary">
          О нас
        </a>
        <a href="#services" class="transition-colors hover:text-primary">
          Услуги
        </a>
        <a href="#projects" class="transition-colors hover:text-primary">
          Кейсы
        </a>
      </div>
    </div>
    <div class="flex gap-4 items-center justify-between flex-wrap text-xs sm:text-sm text-muted-foreground">
      <div class="flex items-center gap-4 sm:gap-6">
        <a href={contacts.address.mapUrl} class="inline-flex items-center gap-2 transition-colors hover:text-primary" target="_blank">
          <LuMapPin className="size-4 sm:size-5" />
          {contacts.address.full}
        </a>
      </div>
      <div class="flex items-center gap-4 flex-wrap sm:gap-6">
        <a href={contacts.social.vk.url} target="_blank" class="inline-flex items-center gap-2 transition-colors hover:text-primary">
          <FaVk className="size-4 sm:size-5" />
          {contacts.social.vk.handle}
        </a>
        <a href={contacts.phone.whatsappUrl} target="_blank" class="inline-flex items-center gap-2 transition-colors hover:text-primary">
          <FaWhatsapp className="size-4 sm:size-5" />
          {contacts.phone.number}
        </a>
        <a href={contacts.social.telegram.url} target="_blank" class="inline-flex items-center gap-2 transition-colors hover:text-primary">
          <LiaTelegram className="size-4 sm:size-5" />
          {contacts.social.telegram.handle}
        </a>
      </div>
    </div>
  </div>
</footer>
