---
import { FaWhatsapp } from 'react-icons/fa'
import { LiaTelegram } from 'react-icons/lia'
---

<footer class="w-full px-6 pb-6 border-t-2 pt-6 bg-radial-[at_50%_100%] to-75% from-primary/20">
  <div class="w-full flex flex-col gap-4 max-w-[1400px] mx-auto">
    <div class="flex gap-4 justify-between items-center flex-wrap">
      <h1 class="uppercase tracking-widest text-xl sm:text-2xl">Placeholder</h1>
      <div class="flex items-center gap-6 text-sm sm:text-base">
        <a href="#" class="transition-colors hover:text-primary">
          О нас
        </a>
        <a href="#" class="transition-colors hover:text-primary">
          Услуги
        </a>
        <a href="#" class="transition-colors hover:text-primary">
          Кейсы
        </a>
        <a href="#" class="transition-colors hover:text-primary">
          Контакты
        </a>
      </div>
    </div>
    <div class="flex gap-4 items-center justify-between flex-wrap text-xs sm:text-sm text-muted-foreground">
      <div class="flex items-center gap-4 sm:gap-6">
        <a href="https://t.me/+79999999999" class="inline-flex items-center gap-2 transition-colors hover:text-primary">
          <LiaTelegram className="size-4 sm:size-5" />
          +7 (999) 999 99-99
        </a>
      </div>
      <div class="flex items-center gap-4 sm:gap-6">
        <a href="https://wa.me/79999999999" class="inline-flex items-center gap-2 transition-colors hover:text-primary">
          <FaWhatsapp className="size-4 sm:size-5" />
          +7 (999) 999 99-99
        </a>
      </div>
    </div>
  </div>
</footer>
